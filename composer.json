{
  "name": "chamber-orchestra/meta-bundle",
  "type": "symfony-bundle",
  "description": "Symfony 8 bundle providing a Doctrine ORM trait for SEO meta fields â€” title, description, keywords, Open Graph image, and robots behaviour",
  "keywords": [
    "symfony",
    "symfony-bundle",
    "seo",
    "meta",
    "meta-tags",
    "open-graph",
    "robots",
    "doctrine",
    "orm",
    "php"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Andrew Lukin",
      "email": "lukin.andrej@gmail.com",
      "homepage": "https://github.com/wtorsi",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.5",
    "chamber-orchestra/view-bundle": "8.0.*",
    "doctrine/orm": "^3.0",
    "symfony/http-foundation": "8.0.*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^13.0"
  },
  "autoload": {
    "psr-4": {
      "ChamberOrchestra\\Meta\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "symfony/runtime": true
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "analyse": "vendor/bin/phpstan analyse",
    "cs-check": "vendor/bin/php-cs-fixer fix --dry-run --diff"
  }
}
